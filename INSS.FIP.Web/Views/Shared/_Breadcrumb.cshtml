@model IEnumerable<INSS.FIP.Web.ViewModels.BreadcrumbItemViewModel>

@if(Model != null && Model.Any())
{
    <div class="govuk-breadcrumbs">
        <ol class="govuk-breadcrumbs__list">
            @foreach(var breadcrumb in Model)
            {
                <li class="govuk-breadcrumbs__list-item">
                    <a class="govuk-breadcrumbs__link" href="@breadcrumb.Href">@breadcrumb.Text</a>
                </li>
            }
            <li class="govuk-breadcrumbs__list-item">
                @ViewData["Title"]
            </li>
        </ol>
    </div>
}