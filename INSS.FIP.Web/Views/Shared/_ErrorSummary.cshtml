<div id="inss-app-ErrorSummary" class="govuk-error-summary inss-app-hide" aria-labelledby="error-summary-title" role="alert" data-module="govuk-error-summary">
    <h2 class="govuk-error-summary__title" id="error-summary-title">
        There is a problem
    </h2>
    <div class="govuk-error-summary__body">
        <ul class="govuk-list govuk-error-summary__list">
            @foreach (var key in ViewData.ModelState.Keys)
            {
                foreach (var modelError in ViewData.ModelState[key]!.Errors)
                {
                    if (string.IsNullOrWhiteSpace(key))
                    {
                        <li>
                            @modelError.ErrorMessage
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="#@key.Replace("." ,"_", StringComparison.Ordinal)">@modelError.ErrorMessage</a>
                        </li>
                    }
                }
            }
        </ul>
    </div>
</div>
